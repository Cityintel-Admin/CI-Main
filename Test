  <button class="close" onclick="closePanel()">Close</button>
  <h3 id="panelTitle"></h3>
  <p id="panelCity"></p>
  <p id="panelRisk"></p>
  <p id="panelTime"></p>
  <div id="panelMap" style="margin:1rem 0;background:#1a1c20;height:180px;border-radius:8px;display:flex;align-items:center;justify-content:center;color:#ccc;">[Map Placeholder]</div>
  <button onclick="goToIncident()">View Full Incident</button>
