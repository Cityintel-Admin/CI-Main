<!-- Add/Edit Modal -->
<div id="feedModal" class="modal">
  <div class="modal-content">
    <h3 id="modalTitle">Add Feed</h3>
    <label>Cities (comma-separated)</label>
    <input type="text" id="citiesInput" placeholder="e.g. London, Paris">
    <label>Risk Levels</label>
    <input type="text" id="riskInput" placeholder="e.g. high, med, low">
    <label><input type="checkbox" id="liveToggle"> Use Live Intel Feed (beta)</label>
    <button onclick="saveFeed()">Save</button>
  </div>
</div>

<script>
  const modal = document.getElementById('feedModal');
  const feedsGrid = document.getElementById('feedsGrid');
  let feeds = JSON.parse(localStorage.getItem('ci_feeds') || '[]');
  let editIndex = null;

  function openModal(i=null){
    modal.classList.add('active');
    if(i!==null){
      editIndex=i;
      const f=feeds[i];
      document.getElementById('modalTitle').innerText='Edit Feed';
      document.getElementById('citiesInput').value=f.cities.join(', ');
      document.getElementById('riskInput').value=f.risk.join(', ');
      document.getElementById('liveToggle').checked=!!f.useLive;
    } else {
      editIndex=null;
      document.getElementById('modalTitle').innerText='Add Feed';
      document.getElementById('citiesInput').value='';
      document.getElementById('riskInput').value='';
      document.getElementById('liveToggle').checked=false;
    }
  }
  function closeModal(){modal.classList.remove('active');}
  window.onclick=(e)=>{if(e.target===modal)closeModal();}

  document.querySelector('.add-feed').onclick=()=>openModal();

  function saveFeed(){
    const cities=document.getElementById('citiesInput').value.split(',').map(c=>c.trim()).filter(Boolean);
    const risk=document.getElementById('riskInput').value.split(',').map(r=>r.trim()).filter(Boolean);
    const useLive=document.getElementById('liveToggle').checked;
    if(!cities.length)return alert('Enter at least one city');
    const f={cities,risk,useLive};
    if(editIndex!==null)feeds[editIndex]=f;else feeds.push(f);
    localStorage.setItem('ci_feeds',JSON.stringify(feeds));
    closeModal();
    renderFeeds();
  }

  async function fetchFeedData(f){
    const endpoint=f.useLive?'/api/live-news':'/api/live';
    const url=`https://api.cityintelapi.com${endpoint}?cities=${encodeURIComponent(f.cities.join(','))}&risk=${encodeURIComponent(f.risk.join(','))}`;
    const res=await fetch(url);
    const j=await res.json();
    return j.events||[];
  }

  function renderFeeds(){
    feedsGrid.innerHTML='';
    feeds.forEach(async(f,i)=>{
      const card=document.createElement('div');
      card.className='feed-card';
      card.innerHTML=`<h3>${f.cities.join(', ')} Feed</h3>${f.useLive?'<div class="live-pill">LIVE</div>':''}<div id="feed${i}"></div>
      <div class="feed-actions"><button onclick="openModal(${i})">Edit</button><button class="delete" onclick="deleteFeed(${i})">Delete</button></div>`;
      feedsGrid.appendChild(card);
      const data=await fetchFeedData(f);
      const feedDiv=card.querySelector(`#feed${i}`);
      data.forEach(ev=>{
        const row=document.createElement('div');
        row.className='incident-row';
        row.innerHTML=`<strong>${ev.city}</strong> - ${ev.title}<br><small>${ev.when}</small>`;
        row.onclick=()=>openPanel(ev);
        feedDiv.appendChild(row);
      });
    });
  }

  function deleteFeed(i){
    if(confirm('Delete this feed?')){
      feeds.splice(i,1);
      localStorage.setItem('ci_feeds',JSON.stringify(feeds));
      renderFeeds();
    }
  }

  // Panel logic
  const panel=document.getElementById('detailPanel');
  const pTitle=document.getElementById('panelTitle');
  const pCity=document.getElementById('panelCity');
  const pRisk=document.getElementById('panelRisk');
  const pTime=document.getElementById('panelTime');
  let currentEvent=null;

  function openPanel(ev){
    panel.classList.add('open');
    currentEvent=ev;
    pTitle.innerText=ev.title;
    pCity.innerText='City: '+ev.city;
    pRisk.innerText='Risk: '+ev.risk;
    pTime.innerText='Time: '+new Date(ev.when).toLocaleString();
  }
  function closePanel(){panel.classList.remove('open');}
  function goToIncident(){
    if(currentEvent){
      sessionStorage.setItem('selectedIncident',JSON.stringify(currentEvent));
      window.location.href='incident.html';
    }
  }

  renderFeeds();
</script>
</body>
</html>
